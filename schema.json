{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "GlanceLovelaceCardConfig": {
      "properties": {
        "id": {
          "type": "string",
          "const": "glance"
        },
        "type": {
          "type": "string",
          "const": "glance"
        },
        "entities": {
          "type": "array",
          "minItems": 1
        },
        "title": {
          "type": "string"
        },
        "show_name": {
          "type": "boolean",
          "default": true
        },
        "show_icon": {
          "type": "boolean",
          "default": true
        },
        "show_state": {
          "type": "boolean",
          "default": true
        },
        "theme": {
          "type": "string",
          "default": "themes.yaml"
        },
        "columns": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "required": [],
      "type": "object"
    },
    "EntityConfiguration":{
        
    }
    "HistoryGraphLovelaceCardConfig": {
      "properties": {
        "id": {
          "type": "string",
          "const": "glance"
        },
        "type": {
          "type": "string",
          "const": "history-graph"
        },
        "entities": {
          "type": "array"
        }
      },
      "additionalProperties": false,
      "required": ["entities"],
      "type": "object"
    },
    "LovelaceViewConfig": {
      "properties": {
        "background": {
          "type": "string"
        },
        "badges": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "cards": {
          "items": {
            "anyOf": [
              { "$ref": "#/definitions/GlanceLovelaceCardConfig" },
              { "$ref": "#/definitions/HistoryGraphLovelaceCardConfig" }
            ]
          },
          "type": "array"
        },
        "icon": {
          "type": "string"
        },
        "index": {
          "type": "number"
        },
        "panel": {
          "type": "boolean"
        },
        "path": {
          "type": "string"
        },
        "theme": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["title"],
      "minItems": 1,
      "type": "object"
    }
  },
  "properties": {
    "background": {
      "type": "string"
    },
    "resources": {
      "items": {
        "properties": {
          "type": {
            "enum": ["css", "html", "js", "module"],
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "type": "array"
    },
    "title": {
      "type": "string"
    },
    "views": {
      "items": {
        "$ref": "#/definitions/LovelaceViewConfig"
      },
      "type": "array"
    }
  }
}
